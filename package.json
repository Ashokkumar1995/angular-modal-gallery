{
  "name": "angular-modal-gallery",
  "version": "2.0.2",
  "description": "Modal image gallery for angular >=2",
  "main": "dist/bundles/angular-modal-gallery.umd.js",
  "license": "MIT",
  "author": "Stefano Cappa",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.8.6"
  },
  "homepage": "https://github.com/Ks89/angular-modal-gallery#readme",
  "scripts": {
    "clean": "rimraf dist .compiled bundle",
    "clean:all": "npm run clean && rimraf demo/systemjs/node_modules/angular-modal-gallery demo/webpack/node_modules/angular-modal-gallery",
    "copy": "copyfiles src/**/*.scss dist && copyfiles src/**/*.html dist",
    "ngc": "ngc",
    "rollup": "rollup -c",
    "minify": "uglifyjs dist/bundles/angular-modal-gallery.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/angular-modal-gallery.umd.min.js",
    "prebuild": "npm run clean:all",
    "build": "npm run ngc && npm run copy && npm run rollup && npm run minify",
    "postbuild": "npm run bundle && npm run copy:demo:systemjs && npm run copy:demo:angularcli && npm run copy:demo:webpack",
    "bundle": "mkdirp bundle && ncp dist bundle/dist && ncp .compiled bundle/.compiled && ncp src bundle/src && copyfiles LICENSE README.md package.json index.ts index.d.ts bundle",
    "copy:demo:systemjs": "mkdirp demo/systemjs/node_modules/angular-modal-gallery && ncp bundle demo/systemjs/node_modules/angular-modal-gallery",
    "copy:demo:angularcli": "mkdirp demo/angular-cli/angular-modal-gallery-angularcli-demo/node_modules/angular-modal-gallery && ncp bundle demo/angular-cli/angular-modal-gallery-angularcli-demo/node_modules/angular-modal-gallery",
    "copy:demo:webpack": "mkdirp demo/webpack/node_modules/angular-modal-gallery && ncp bundle demo/webpack/node_modules/angular-modal-gallery",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@angular/common": ">=2.0.0",
    "@angular/core": ">=2.0.0",
    "font-awesome": ">=4.0.0",
    "hammerjs": ">=2.0.0",
    "mousetrap": ">=1.6.0",
    "rxjs": ">=5.0.0"
  },
  "devDependencies": {
    "@angular/common": "^2.4.7",
    "@angular/compiler": "^2.4.7",
    "@angular/compiler-cli": "^2.4.7",
    "@angular/core": "^2.4.2",
    "@angular/platform-browser": "^2.4.7",
    "@angular/platform-browser-dynamic": "^2.4.7",
    "@angular/platform-server": "^2.4.7",
    "@types/chai": "^3.4.34",
    "@types/hammerjs": "~2.0.0",
    "@types/lodash": "^4.14.52",
    "@types/mocha": "^2.2.37",
    "@types/mousetrap": "^1.5.33",
    "@types/node": "^7.0.0",
    "chai": "^3.5.0",
    "clean-css": "^4.0.7",
    "codelyzer": "^2.0.0-beta.4",
    "copyfiles": "^1.0.0",
    "core-js": "^2.4.1",
    "fs-extra": "^2.0.0",
    "html-minifier": "^3.3.1",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "ncp": "^2.0.0",
    "node-sass": "^4.1.1",
    "reflect-metadata": "^0.1.3",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rollup-plugin-angular-aot": "^0.0.4",
    "rxjs": "^5.0.3",
    "ts-helpers": "^1.1.2",
    "ts-node": "^2.0.0",
    "tslib": "^1.5.0",
    "tslint": "^4.3.1",
    "typescript": "^2.1.4",
    "uglify-js": "^2.7.5",
    "zone.js": "^0.7.7"
  },
  "keywords": [
    "angular-modal-gallery",
    "angular2-gallery",
    "angular2-modal-gallery",
    "angular2-modal",
    "modal-gallery",
    "angular 2",
    "angular 4",
    "angular4-modal-gallery",
    "angular4-modal",
    "popup",
    "gallery",
    "modal",
    "angular2-modal-popup",
    "angular4-modal-popup",
    "angular2-modal",
    "angular4-modal",
    "modal-popup",
    "swipe",
    "gesture",
    "touch",
    "mobile"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ks89/angular-modal-gallery.git"
  },
  "bugs": {
    "url": "https://github.com/Ks89/angular-modal-gallery/issues"
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  }
}
